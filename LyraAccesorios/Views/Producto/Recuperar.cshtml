@model LyraAccesorios.Models.Producto
@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "RecuperarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{

    <div class="card-body">
        <!--Formularios de recepcion de datos-->
        <form method="post" asp-action="Recuperar" asp-controller="Producto">
            <!--Campo secreto-->
            <input type="hidden" asp-for="ProductoId" />
            <!--Validacion-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--Campos-->

            <div class="container" style="padding:30px">
                <div class="form-group">
                    <label asp-for="Modelo" class="form-label">¿Desea volver a dar de alta este artículo?</label>
                    <input asp-for="Modelo" class="form-control" type="text" disabled />
                    <span asp-validation-for="Modelo" class="text-danger" />
                </div>
            </div>
            <!--Botones para enviar los datos y volver al listado-->

            <div class="container" style="padding:30px">
                <div class="form-group">
                    <input type="submit" value="Recuperar" class="btn btn-success form-control" />
                </div>
                <div class="form-group">
                    <a class="btn btn-primary" class="btn btn-success" style="margin-top:10px; margin-left:886px" asp-controller="Producto" asp-action="Index">Volver al listado</a>
                </div>
            </div>
        </form>
    </div>
}
else
{
    <h3>No hay productos en el sistema. </h3>
}

